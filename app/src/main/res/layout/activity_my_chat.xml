<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".DiseÃ±osChats.MyChat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordechat"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liza"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="100dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo/ahora"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:textColor="#73b85d"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:background="@drawable/circulo_p2"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true">
        </ImageView>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icono_atras"
            android:backgroundTint="@color/black"
            android:layout_centerVertical="true">
        </ImageView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="8dp"
        android:layout_alignParentBottom="true"><!--Menu abajo-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/buscar_chats">
        </TextView>


        <ImageView
            android:id="@+id/enviar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="330dp"
            android:background="@drawable/enviar">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mensajeria"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/audio"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/grafico"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp">
        </ImageView>

        <ImageView
            android:id="@+id/galeria"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/galerias"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="76dp">
        </ImageView>

        <ImageView
            android:id="@+id/emoji"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/emoji"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="75dp">
        </ImageView>

    </RelativeLayout>





</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <View
        android:layout_width="412dp"
        android:layout_height="95dp"
        android:background="#262626"></View>

    <TextView
        android:layout_width="230dp"
        android:layout_height="64dp"
        android:fontFamily="@font/inter"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        android:layout_marginStart="81dp"
        android:gravity="center"
        tools:text="Buscar">

    </TextView>

    <EditText
        android:id="@+id/etbuscar"
        android:layout_width="373dp"
        android:layout_height="49dp"
        android:inputType="text"
        android:hint="       Buscar"
        android:gravity="center_vertical|start"
        android:paddingStart="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/r"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        app:backgroundTint="#505050" />


    <Button
        android:id="@+id/btn"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/img_16"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></Button>

    <View
        android:layout_width="350dp"
        android:layout_height="255dp"
        app:backgroundTint="#b3505050"
        android:layout_marginStart="5dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/r"></View>

    <Button
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0D0D0F"

        android:layout_marginStart="87dp"
        android:layout_marginTop="200dp">

    </Button>

    <Button
        android:id="@+id/comentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|    Comentarios"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0D0D0F"
        android:layout_marginStart="155dp"
        android:layout_marginTop="200dp">

    </Button>


</RelativeLayout>

